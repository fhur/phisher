{
  // Required
  "manifest_version": 2,
  "name": "Phishy phisher",
  "version": "0.0.1",

  // Recommended
  //"default_locale": "en",
  "description": "Protect yourself from phishing!",

  //TODO
  //"icons": {...},

  // Pick one (or none)
  //"browser_action": {...},
  //"page_action": {...},

  // Optional
  //"author": ...,
  "background": {
    // Recommended
    "scripts" : ["js/background.js"]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["css/app.css"],
      "js": ["js/vendor.js","js/app.js"]
    }
  ]
}
